@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h1>Add a new course</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name) <br>
  @Html.TextBoxFor(model => model.Name) <br>

  @Html.LabelFor(model => model.Number) <br>
  @Html.TextBoxFor(model => model.Number) <br>

  @Html.LabelFor(model => model.Description) <br>
  @Html.TextBoxFor(model => model.Description) <br><br>

  @Html.LabelFor(model => model.Department)<br>
  @Html.DropDownList("DepartmentId")<br>

  @Html.LabelFor(model => model.Professor)<br>
  @Html.DropDownList("ProfessorId")<br>

  <input type="submit" value="Add Course" /><br>
}

<p>@Html.ActionLink("Show all Courses", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>