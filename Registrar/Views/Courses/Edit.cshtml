@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h2>Edit this course: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.Name)<br>
  @Html.EditorFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Number)<br>
  @Html.EditorFor(model => model.Number)<br>

  @Html.LabelFor(model => model.Description)<br>
  @Html.EditorFor(model => model.Description)<br>

  @Html.LabelFor(model => model.Department)<br>
  @Html.DropDownList("DepartmentId")<br>

  @Html.LabelFor(model => model.Professor)<br>
  @Html.DropDownList("ProfessorId")<br>

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Courses", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
