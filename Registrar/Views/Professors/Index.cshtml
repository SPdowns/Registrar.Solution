@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Professor>;

<h1>Professor</h1>

@if (@Model.Count == 0)
{
  <h3>No professors have been added yet</h3>
}

@foreach (Professor professor in Model)
{
  <li>@Html.ActionLink($"{professor.ProfessorName}", "Details", new { id = professor.ProfessorId})</li>
}

<p>@Html.ActionLink("Add new Professor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>